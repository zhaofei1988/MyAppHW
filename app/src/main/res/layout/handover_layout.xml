<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="点击下面选框选择货物出库类型"
            android:textColor="@color/c4169E1"
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/handover_sp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/boder_rounded_6ca8cd_ffffff"></Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="点击下面选框选择装载车辆"
            android:textColor="@color/c4169E1"
            android:textSize="18sp"></TextView>

        <Spinner
            android:id="@+id/handover_sp1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/boder_rounded_6ca8cd_ffffff"></Spinner>

        <ImageView
            android:id="@+id/handover_img"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/handover_txt"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:text="车辆无法发布，车辆可能在发布中"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/handover_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/boder_rounded_6ca8cd_6ca8cd"
            android:text="发布App"
            android:textColor="@color/ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>