<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c4169E1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/toolbar_break_tv"
            android:layout_width="wrap_content"
            android:paddingRight="30dp"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_break"
            android:layout_marginTop="5dp"
            android:textColor="@color/ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/toolbar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/toolbar_break_tv"
            android:layout_marginRight="10dp"
            android:textColor="@color/ffffff"
            android:textSize="18sp" />
        <LinearLayout
            android:id="@+id/toolbar_search_ly"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="35dp"
            android:visibility="gone"
            android:background="@drawable/boder_rounded_ffffff_ffffff"
            android:layout_marginRight="70dp"
            android:layout_toRightOf="@id/toolbar_break_tv">
            <TextView
                android:id="@+id/toolbar_search_icon"
                android:layout_width="wrap_content"
                android:text="@string/search"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="23sp"
                android:textColor="@color/c666666"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/toolbar_search_et"
                android:layout_width="match_parent"
                android:background="@color/c00000000"
                android:hint="运输编号"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:maxLength="22"
                android:inputType="text"
                android:lines="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/toolbar_rigth_tv"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/ffffff"
            android:textSize="15sp"
            android:paddingRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/toolbar_search_tv"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/search"
            android:textColor="@color/ffffff"
            android:textSize="32sp"
            android:visibility="gone"
            android:paddingRight="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>