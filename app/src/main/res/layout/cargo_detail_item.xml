<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ffffff"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/cargo_detail_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sssss"
                android:textColor="@color/c666666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cargo_detail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sssss"
                android:textColor="@color/c666666"
                android:textSize="13sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <Button
                android:id="@+id/cargo_detail_item_status"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:text="ssss"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>
    <everlinkintl.com.myappwh.view.NoScrollGridView
        android:paddingBottom="20dp"
        android:background="@color/ffffff"
        android:id="@+id/cargo_detail_item_gridView"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:cacheColorHint="@color/c00000000"
        android:listSelector="@color/c00000000"
        android:scrollbars="none"
        android:verticalSpacing = "10dp"
        android:horizontalSpacing = "10dp"
        android:layout_height="wrap_content">
    </everlinkintl.com.myappwh.view.NoScrollGridView>
</LinearLayout>